@using AndroidNotificationQuiz.Admin.ViewModels
@model GeneralSettingsModel
@{
    ViewBag.Title = "Настройки";
}

<p>
    <h2>Настройки</h2>
</p>

<form asp-action="Save" asp-controller="GeneralSettings" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly" />
    <div>
        <div class="form-group">
            <label asp-for="VideoViewPercentage">% видеофайла, который должен просмотреть пользователь</label>
            <input class="form-control" type="number" asp-for="VideoViewPercentage" min="1" max="100" />
            <span asp-validation-for="VideoViewPercentage" class="text-danger" />
        </div>
        <input type="submit" class="btn btn-success" type="submit" value="Сохранить" />
    </div>
</form>